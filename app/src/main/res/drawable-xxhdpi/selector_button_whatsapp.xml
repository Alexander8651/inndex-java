<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/green_whatsapp_light" />
            <solid android:color="@color/green_whatsapp_light" />
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/green_whatsapp" />
            <solid android:color="@color/green_whatsapp" />
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>