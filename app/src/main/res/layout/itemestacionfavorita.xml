<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginTop="8dp"
          android:layout_marginStart="22dp"
          android:src="@drawable/gasolinera_icono"/>

      <LinearLayout
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="8dp"
          android:layout_marginStart="20dp">
          <TextView
              android:id="@+id/marca_estacion_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Terpel"
              android:textColor="@android:color/holo_red_dark"
              android:textSize="20sp"/>

          <TextView
              android:id="@+id/nombre_estacion_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="EDS la esperanza"
              android:textSize="16sp"/>
          <TextView
              android:id="@+id/direccion_estacion_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="CL. 22 # 68d-20"
              android:textSize="16sp"/>

          <TextView
              android:id="@+id/ciudad_estacion_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="Bogotá DC, Bogotá DC"
              android:textSize="16sp"/>
      </LinearLayout>

      <ImageView
          android:id="@+id/menu3botonoes"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:tint="@android:color/darker_gray"
          android:src="@drawable/ic_more_horiz_servicios"
          android:layout_marginStart="12dp"/>

  </LinearLayout>

</androidx.cardview.widget.CardView>