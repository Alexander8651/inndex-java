<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgEdsFavorita"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/gasolinera_icono" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imgEdsFavorita"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marca_estacion_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                tools:text="Terpel" />

            <TextView
                android:id="@+id/nombre_estacion_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                tools:text="EDS la esperanza" />

            <TextView
                android:id="@+id/direccion_estacion_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                tools:text="CL. 22 # 68d-20" />

            <TextView
                android:id="@+id/ciudad_estacion_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                tools:text="Bogotá DC, Bogotá DC" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menu3botonoes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/filtros"
            android:src="@drawable/ic_more_horiz_detalles"
            app:tint="@android:color/darker_gray" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>