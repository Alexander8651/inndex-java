<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_compra_venta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloCompraYventa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/compra_y_venta"
        android:textSize="@dimen/text_titulos_secciones"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/compraVentaCarroYa"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/carroya"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/compraVentaOlxAutos"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/olxautos"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/compraVentaTuCarro"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/tucarro"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/compraVentaOtra"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/otra_compraventa"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/gray_separator_services" />

</LinearLayout>