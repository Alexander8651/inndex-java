<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris_menu_tres_puntos_servicios">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFotoPromocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/fotoPromocion"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tituloPromocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/cvFotoPromocion"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precioPromocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tituloPromocion"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/cvFotoPromocion"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/gris_menu_main" />

            <TextView
                android:id="@+id/descripcionPromocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/precioPromocion"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/cvFotoPromocion"
                android:fontFamily="@font/roboto_regular" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>