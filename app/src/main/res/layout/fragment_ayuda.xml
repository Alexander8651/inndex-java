<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AyudaFragment">

    <include layout="@layout/my_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/si_tienes_alg_n_problema_de_la_plataforma_peticion_queja_o_reclamo_comunicate_con_nosotros_al_correo"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/inndex_email"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <Button
        android:id="@+id/enviarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/enviar_correo"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_separator_services" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/separator_or"
            android:textColor="@color/gray_separator_services"
            android:textSize="25sp" />

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@color/gray_separator_services" />

    </LinearLayout>

    <!-- Whatsapp -->
    <RelativeLayout
        android:id="@+id/lay_whatsapp_ayuda"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_buttons_indicaciones"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_button_whatsapp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_btn_whatsapp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/whatsapp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_toEndOf="@id/img_btn_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/escr_benos_al_whatsapp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="6dp"/>

    </RelativeLayout>


</LinearLayout>