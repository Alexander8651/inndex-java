<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp"
    tools:context=".fragments.estaciones.EstacionesServiciosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/gasolinera_2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.6"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/marcaBomba"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        tools:text="Terpel" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/marcaBomba"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_estacion_servicios_favorita"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="10dp"
                            android:button="@drawable/favourite_estacion_selector" />

                        <TextView
                            android:id="@+id/nombreBomba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="40dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="19sp"
                            tools:text="EDS la esperanza"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/img_menu_estacion_servicios"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_more_horiz_servicios"
                            app:tint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/botonback">

                    <ImageView
                        android:id="@+id/botonbackdetallebomba"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_arrow_back_24" />

                </RelativeLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>
 </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>