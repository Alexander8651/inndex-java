<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nombre_estacion_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto-regular"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_text_title_snippet"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_street_view_estacion_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nombre_estacion_snippet"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="@dimen/size_text_body_snippet" />
</RelativeLayout>