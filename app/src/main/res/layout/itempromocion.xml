<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fotoPromocion"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soat con descuento"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/precioPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$232,000"
            android:textColor="@color/gris_menu_main"
            android:fontFamily="@font/roboto_light"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/menuPromocionAdapter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_more_horiz_detalles"
        android:layout_marginEnd="10dp"/>

</LinearLayout>