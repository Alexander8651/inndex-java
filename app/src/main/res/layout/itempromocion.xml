<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/fotoPromocion"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soat con descuento"
            />
        <TextView
            android:id="@+id/precioPromocion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$232,000"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/menuPromocionAdapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz_servicios"
        android:layout_weight="0.5"/>

</LinearLayout>