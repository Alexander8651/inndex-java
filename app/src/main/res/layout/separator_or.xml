<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/centered_or"
        android:background="@color/gray_separator_services"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/centered_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/separator_or"
        android:textAlignment="center"
        android:textColor="@color/gray_separator_services"
        android:textSize="20sp" />

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/centered_or"
        android:background="@color/gray_separator_services" />

</RelativeLayout>