<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_metodos_pago"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toEndOf="@+id/layMetodosPago">

    <TextView
        android:id="@+id/tituloMetodosPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="MÃ©todos de pago"
        android:textSize="@dimen/text_titulos_secciones"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/metodoPagoVisa"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/visa"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoTPaga"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/tpaga"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoPuntosColombia"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/puntos_colombia"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoPse"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/pse"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoPagoClick"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/pagoclick"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoMercadoPago"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/mercado_pago"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoMastercard"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/mastercard"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoGopass"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/gopass"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoEfectivo"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/efectivo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoDiscover"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/discover"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoDinersClub"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/diners_club"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metodoPagoAmericanExpress"
                android:layout_width="@dimen/size_img_secciones"
                android:layout_height="@dimen/size_img_secciones"
                android:src="@drawable/american_express"
                android:visibility="gone" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/gray_separator_services" />

</LinearLayout>