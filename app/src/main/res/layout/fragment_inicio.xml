<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".fragments.InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            app:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/edt_look_for_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_light_background"
            android:drawableStart="@drawable/ic_search"
            android:gravity="center_horizontal"
            android:hint="¿A dónde vas?"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="25dp"
            android:paddingBottom="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="28sp" />
    </LinearLayout>

    <!-- Menú Oculto -->

    <LinearLayout
        android:id="@+id/lay_menu_secundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay_menu_principal"
        android:background="@drawable/round_shadow_border"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/img_btn_ocultar_menu_secundario"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/bajar" />

        <Button
            android:id="@+id/btn_reportar_accidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Accidente"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_estado_via"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Estado de la vía"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_eds_no_registrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="EDS no registrada"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_peaje_no_registrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Peaje no registrado"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_otro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_white_border"
            android:text="Otro"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fabUbicacion"
        android:layout_alignStart="@+id/fabUbicacion"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_navegacion"
        android:visibility="gone"
        app:backgroundTint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay_menu_principal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_ubicacion"
        app:backgroundTint="@color/white" />


    <!--Button
        android:id="@+id/btnRecorrido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text_btn_iniciar"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_box"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="20dp"
        android:text="@string/iniciar2"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_alignEnd="@id/fabRuta"-->

</RelativeLayout>