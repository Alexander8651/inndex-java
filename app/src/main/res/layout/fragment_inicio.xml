<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".fragments.InicioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_menu_content_desc"
            android:src="@drawable/ic_menu" />

        <EditText
            android:id="@+id/edt_look_for_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_light_background"
            android:drawableStart="@drawable/ic_search"
            android:gravity="center_horizontal"
            android:paddingEnd="25dp"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:hint="¿A dónde vas?"
            android:textSize="28sp" />

    </LinearLayout>

    <!-- Menú Oculto -->

    <LinearLayout
        android:id="@+id/lay_menu_secundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay_menu_principal"
        android:background="@color/sombra"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/img_btn_ocultar_menu_secundario"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bajar"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/btn_reportar_accidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Accidente"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_estado_via"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Estado de la vía"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_eds_no_registrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="EDS no registrada"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_peaje_no_registrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:background="@drawable/round_white_border"
            android:text="Peaje no registrado"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />

        <Button
            android:id="@+id/btn_reportar_otro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_start_btn_menu_secundario"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/margin_end_btn_menu_secundario"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_white_border"
            android:text="Otro"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_text_btn_menu_secundario" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/fabRuta"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_box"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/margin_box"
        android:layout_marginBottom="15dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!--LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGalones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text"
                android:text="@string/txt_galones"/>

            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size_text"
                android:text="@string/txt_distancia"
                />

        </LinearLayout-->

    </LinearLayout>

    <!--Button
        android:id="@+id/btnDefaultState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginTop="40sp"
        android:text="@string/tanquear"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
