        android:background="@drawable/redondeado"
        android:layout_centerHorizontal="true"/-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fabUbicacion"
        android:layout_alignStart="@+id/fabUbicacion"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_ruta"
        android:visibility="invisible"
        app:backgroundTint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay_menu_principal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_ubicacion"
        app:backgroundTint="@color/white" />

    <!-- Menú Inferior -->
    <LinearLayout
        android:id="@+id/lay_menu_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/fondo_menu_inferior_inicio"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/img_btn_abrir_dialogo_reportar_accidente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/btn_menu_content_desc"
                android:src="@drawable/reportar_negro"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tv_reportar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_btn_abrir_dialogo_reportar_accidente"
                android:layout_centerHorizontal="true"
                android:text="Reportar"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_menu_principal"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/width_menu_item_separator"
            android:layout_height="@dimen/height_menu_item_separator"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/img_btn_eds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_menu_content_desc"
                android:src="@drawable/eds_negro"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tv_eds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_btn_eds"
                android:layout_centerHorizontal="true"
                android:text="EDS"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_menu_principal"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/width_menu_item_separator"
            android:layout_height="@dimen/height_menu_item_separator"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/img_btn_tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_menu_content_desc"
                android:src="@drawable/tienda_negro"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tv_tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_btn_tienda"
                android:layout_centerHorizontal="true"
                android:text="Tienda"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_menu_principal"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

