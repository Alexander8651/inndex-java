<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tiendasconvivencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulotiendaconvivencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Tiendas de conveniencia"
            android:textSize="@dimen/text_titulos_secciones"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tiendaTigerMarket"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/tigermarket"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaOlimpica"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/olimpica"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaJustoBueno"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/justoy_bueno"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaExitoExpress"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/exito"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaD1"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/d1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaAra"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/ara"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaAltoque"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/altoque"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tiendaBestMart"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/bestmart"
                    android:visibility="gone" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/gray_separator_services" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>