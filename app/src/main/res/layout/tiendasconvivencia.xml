<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tiendasconvivencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulotiendaconvivencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_titulos_secciones"
            android:textStyle="bold"
            android:text="Tiendas de convivencia"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/tiendaTigerMarket"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/tigermarket"/>

                <ImageView
                    android:id="@+id/tiendaOlimpica"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/olimpica"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>

                <ImageView
                    android:id="@+id/tiendaJustoBueno"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/justoy_bueno"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>

                <ImageView
                    android:id="@+id/tiendaExitoExpress"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/exito"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>

                <ImageView
                    android:id="@+id/tiendaD1"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/d1"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>

                <ImageView
                    android:id="@+id/tiendaAra"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/ara"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>

                <ImageView
                    android:id="@+id/tiendaAltoque"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:visibility="gone"
                    android:src="@drawable/altoque"
                    android:layout_marginStart="@dimen/margin_img_secciones"/>


            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/gray_separator_services"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>