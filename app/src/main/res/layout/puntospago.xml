<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/puntospago"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulopuntospago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos de pagos"
            android:textSize="@dimen/text_titulos_secciones"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/puntoPagoSuRed"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/sured"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/puntoPagoEfecty"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/efecty"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/puntoPagoBaloto"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/baloto"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/punto_giros_y_finanzas"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/girosyfinanzas"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/punto_moviired"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/moviired"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/punto_pagafacil"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/pagafacil"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/puntoredeban"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/redeban"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/puntoservypagos"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/servypagos"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/puntosupergiros"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/supergiros"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/punto_red"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/puntored"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/punto_western_union"
                    android:layout_width="@dimen/size_img_secciones"
                    android:layout_height="@dimen/size_img_secciones"
                    android:src="@drawable/western_union"
                    android:visibility="gone" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="@color/gray_separator_services" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>